<HomeScreen>:
    name: "HomeScreen"
    CustomLayout:
        OpenCVStream:
            canvas:
                Color:
                    rgba: 0.945, 0.945, 0.945, 1
                Rectangle:
                    pos: self.x, self.y
                    size: 840, 680
            id: stream
            pos: root.width-self.width-35, root.height/2-self.height/2
            size: 840, 680
            on_parent: self.load()
        CustomButton:
            id: carstream
            text: 'Camera'
            pos: root.width/3+self.width/2, root.height/2-self.height/2+self.height*2
            size: 150, 100
            on_release: stream.toggle_stream()
        CustomButton:
            id: connect
            text: 'Connect'
            pos: root.width/3+self.width/2, root.height/2-self.height/2+self.height
            size: 150, 100
            on_release: stream.connect()
            on_release: start.enabled = True
            on_release: self.enabled = False
        CustomButton:
            id: start
            text: 'Start'
            pos: root.width/3+self.width/2, root.height/2-self.height/2
            size: 150, 100
            on_parent: self.enabled = False
            on_release: stream.start()
            on_release: stop.enabled = True
            on_release: self.enabled = False
        CustomButton:
            id: stop
            text: 'Stop'
            pos: root.width/3+self.width/2, root.height/2-self.height/2-self.height
            size: 150, 100
            on_parent: self.enabled = False
            on_release: stream.stop()
            on_release: connect.enabled = True
            on_release: self.enabled = False
        StartButton:
            text: 'Start'
            pos: self.width/2, self.height/2
            size: 100, 100
            on_release: self.start()
        PhotoProgress:
            pos: 200, 50
            size: root.width-250, 10
