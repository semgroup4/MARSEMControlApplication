<HomeScreen>:
    name: "HomeScreen"
    CustomLayout:
        OpenCVStream:
            canvas:
                Color:
                    rgba: 0.102, 0.251, 0.424, 1
                Rectangle:
                    pos: self.x-20, self.y+200
                    size: self.width+40, self.height-400
            id: stream
            pos: root.width-self.width-35, root.height/2-self.height/2
            size: 1000, 1000
            on_parent: self.load()
        CustomButton:
            id: connect
            text: 'Connect'
            pos: root.width/4-self.width/2, root.height/2-self.height/2+self.height
            size: 150, 100
            on_release: stream.connect()
            on_release: start.enabled = True
            on_release: self.enabled = False
        CustomButton:
            id: start
            text: 'Start'
            pos: root.width/4-self.width/2, root.height/2-self.height/2
            size: 150, 100
            on_parent: self.enabled = False
            on_release: stream.start()
            on_release: stop.enabled = True
            on_release: self.enabled = False
        CustomButton:
            id: stop
            text: 'Stop'
            pos: root.width/4-self.width/2, root.height/2-self.height/2-self.height
            size: 150, 100
            on_parent: self.enabled = False
            on_release: stream.stop()
            on_release: connect.enabled = True
            on_release: self.enabled = False
        StartButton:
            text: 'Start'
            pos: self.width/2, self.height/2
            size: 100, 100
            on_release: self.start()
        PhotoProgress:
            pos: 200, 50
            size: root.width-250, 10
