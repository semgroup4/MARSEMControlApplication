<HomeScreen>:
    name: "HomeScreen"
    CustomLayout:
        BoxLayout:
            pos: root.width/4-self.width*2, root.height/2
            orientation: 'vertical'
            size: '75dp', '200dp'
            Label:
                text: 'Server'
                size: '75dp', '50dp'
            Button:
                text: 'Start'
                size: '75dp', '50dp'
                on_release: root.start_server()
        BoxLayout:
            pos: root.width/4-self.width/2, root.height/2
            orientation: 'vertical'
            size: '75dp', '200dp'
            Label:
                text: 'Car'
                size: '75dp', '50dp'
            Button:
                text: 'Connect'
                size: '75dp', '50dp'
                on_release: root.connect()
            Button:
                text: 'Start'
                size: '75dp', '50dp'
                on_release: root.start()
                on_release: progress_bar.start()
        Label:
            text: 'Progress overview'
            pos: '60dp', root.height/2-self.width/1.5
            size: '75dp', '50dp'
        PhotoProgress:
            id: progress_bar
            pos: '35dp', root.height/2-self.width/5
            size: '220dp', '2dp'
