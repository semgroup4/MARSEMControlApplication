<PhotoScreen>:
    name: 'PhotoScreen'
    CustomLayout:
        Button:
            text: 'View Photos'
            size: '100dp', '25dp'
            size_hint: None,None
            height: '48dp'
            pos: '460dp', root.height-root.height/7+1
            on_release: root.showImages()
        FileChooserIconView:
            pos: root.width-self.width, root.height-self.height*1.7+self.height/2
            size: root.size
            on_selection: root.loadImage(self)
            # Change picture type by changing the filter.
            filters: ['*.jpg']
            path: root.getPath()