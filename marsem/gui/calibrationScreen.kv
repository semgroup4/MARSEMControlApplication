<CalibrationScreen>:
    name: 'CalibrationScreen'
    CustomLayout:
        canvas:
            Color:
                rgb: (1, 1, 1)
            Rectangle:
                source: 'calibImage.jpg'
                size: 420, 340
                pos: 50, 50
        Button:
            text: 'Take Snapshot'
            size: '130dp', '25dp'
            size_hint: None,None
            height: '48dp'
            pos: '10dp',root.height - 148
            on_release: root.update_picture()
        Label:
            text: root.get_color_string()
            pos: '600dp', root.height/2-self.width/1.5
            size: '75dp', '50dp'