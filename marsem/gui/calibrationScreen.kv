<CalibrationScreen>:
    name: 'CalibrationScreen'
    CustomLayout:
        Button:
            text: 'Take Snapshot'
            size: '130dp', '25dp'
            size_hint: None,None
            height: '48dp'
            pos: '10dp',root.height - 148
            on_release: root.takeSnapshot()
        canvas:
            Color:
                rgb: (1, 1, 1)
            Rectangle:
                texture: self.texture
                size: self.width + 20, self.height + 20
                pos: self.x - 10, self.y - 10
