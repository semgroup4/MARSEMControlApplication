<CalibrationScreen>:
    name: 'CalibrationScreen'
    on_enter: self.get_size()
    on_enter: self.selected = False
    CustomLayout:
        Image:
            id: calibration_image
            allow_stretch: True
            keep_ratio: False
            source: 'calibImage.jpg'
            pos: root.width/2-self.width/2, root.height/2-self.height/2
            size: dp(500), dp(420)
        BoxLayout:
            pos: root.width/2-self.width/2, root.height/2-dp(270)
            orientation: 'horizontal'
            size: '400dp', '50dp'
            Button:
                text: 'Take Snapshot'
                size: '130dp', '50dp'
                on_release: root.update_picture(), calibration_image.reload()
            Button:
                text: 'Select Min'
                size: '75dp', '50dp'
                on_release: root.start_select_min()
            Button:
                text: 'Select Max'
                size: '75dp', '50dp'
                on_release: root.start_select_max()

        Label:
            text: root.color_string
            pos: '680dp', root.height/2-self.width/1.5
            size: '75dp', '50dp'
        Label:
            text: root.current_action_string
            pos: '680dp', root.height/2-self.width/1.5 - dp(25)
            size: '75dp', '50dp'