<CalibrationScreen>:
    name: 'CalibrationScreen'
    CustomLayout:
        canvas:
            Color:
                rgb: (1, 1, 1)
            Rectangle:
                source: 'calibImage.jpg'
                size: 420, 340
            	pos: self.parent.x+1000, self.parent.y+500


        BoxLayout:
            pos: self.parent.x+100, self.parent.y+500
            orientation: 'horizontal'
            size: '400dp', '50dp'
            Button:
                text: 'Take Snapshot'
                size: '130dp', '50dp'
                on_release: root.update_picture()
            Button:
                text: 'Select Min'
                size: '75dp', '50dp'
                on_release: root.start_select_min()
            Button:
                text: 'Select Max'
                size: '75dp', '50dp'
                on_release: root.start_select_max()

        Label:
            text: root.color_string
            pos: '600dp', root.height/2-self.width/1.5
            size: '75dp', '50dp'
        Label:
            text: root.current_action_string
            pos: '600dp', root.height/2-self.width/1.5 - 50
            size: '75dp', '50dp'