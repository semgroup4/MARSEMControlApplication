<ScreenManagement>:
    HomeScreen:
    PhotoScreen:

# This is the layout template used for all screens of the application.
<CustomLayout>:
    # Changes background. Needs 'before' so that the rectangle is rendered prior to widgets.
    canvas.before:
        Color:
            rgba: 0.251, 0.247, 0.243, 1
        Rectangle:
            pos: self.pos
            size: self.size
    # Header for each screen.
    Button:
        text: 'MARSEM'
        font_size: 100
        pos: 35, root.height-root.height/7
        size: 450, 100
        on_release: app.root.current = 'HomeScreen'
    # Visual traits such as the line below the header goes here.
    Decorations:
        canvas:
            Color:
                rgba: 0.945, 0.945, 0.945, 1
            Line:
                points: 35, root.height-root.height/7, root.width-35, root.height-root.height/7
                width: 2
    Menu:

<Menu>:
    BoxLayout:
        pos: root.width-self.width+1115, root.height-self.height*2+self.height*11.3
        size: 100, 50
        Button:
            text: 'Pictures'
            size: 150, 50
            size_hint: None,None
            height: '48dp'
            on_release: app.root.current = 'PhotoScreen'

        Button:
            text: 'Settings'
            size: 150, 50
            size_hint: None,None
            height: '48dp'
            on_release: root.picture()
        Button:
            text: 'Quit'
            size: 150, 50
            size_hint: None,None
            height: '48dp'
            on_release: app.get_running_app().stop()
